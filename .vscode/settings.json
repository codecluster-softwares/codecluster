// Those commented settings are just for references.
// Don't uncomment them in this git-tracked settings.json file.
// You may enable those settings for your local device globally.
{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80, 100],

  // Format on save (require recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[toml]": { "editor.defaultFormatter": "tamasfe.even-better-toml" },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },

  // File nesting patterns (enable as you wish).
  // "explorer.fileNesting.enabled": true,
  // "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*": "${capture}.map",
    "*.ts": "${capture}.test.ts",
    "*.vue": "${capture}.stories.tsx",
    "package.json": "pnpm-lock.yaml",
    "tsconfig.json": "tsconfig.node.json",
    "vite.config.ts": "vite-env.d.ts",
    ".instructions.md": "agents.md, claude.md, qwen.md",
    "readme.md": "license, .instructions.md"
  },

  // Output bundle visualizations.
  "editor.wordWrapColumn": 80,
  "[javascript]": { "editor.wordWrap": "wordWrapColumn" },
  "[css]": { "editor.wordWrap": "wordWrapColumn" },
  "[json]": { "editor.wordWrap": "wordWrapColumn" },

  // Special files.
  "files.associations": {
    "*.map": "json",
    "pre-commit": "shellscript"
  },

  // Code spell checker (require recommended extensions).
  "cSpell.ignorePaths": [
    "node_modules",
    "out",
    "target",
    "pnpm-lock.yaml",
    "Cargo.lock"
  ],
  "cSpell.words": [
    "appindicator",
    "cdylib",
    "clinerules",
    "codecluster",
    "esbenp",
    "esbuild",
    "icns",
    "libayatana",
    "librsvg",
    "libwebkit",
    "libxdo",
    "oneline",
    "oxlint",
    "qwen",
    "rlib",
    "serde",
    "staticlib",
    "swatinem",
    "tamasfe",
    "tauri",
    "vite",
    "vitest"
  ]
}
